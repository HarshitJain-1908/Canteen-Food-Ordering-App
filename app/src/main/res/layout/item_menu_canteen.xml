<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    >

    <ImageView
        android:id="@+id/iv_img_src"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/edit_text_boundary"
        android:src="@drawable/chicken_tikka_img"
        android:layout_marginHorizontal="10dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/iv_img_src"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_veg_nonveg_symbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/non_veg_symbol"
            />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/medium"
            android:text="ITEM"
            android:textColor="@color/black"
            android:layout_marginTop="2dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs 10"
            android:layout_marginTop="2dp"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_qty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 pcs"
            android:layout_marginTop="2dp"
            android:textSize="12sp" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:backgroundTint="@color/white"
        android:layout_centerVertical="true"
        android:text="Remove"
        android:textAllCaps="false"
        android:fontFamily="@font/semi_bold"
        android:layout_marginEnd="10dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/iv_img_src"
        android:layout_marginTop="10dp"
        android:background="@color/light_grey" />

</RelativeLayout>