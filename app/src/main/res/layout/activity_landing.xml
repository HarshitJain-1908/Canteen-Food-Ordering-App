<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="20dp"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="Your One-Stop Shop for Delicious Campus Eats"
        android:textColor="#808080" />

    <Button
        android:id="@+id/btn_landing_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:text="Sign Up As a User"
        android:textStyle="bold"
        android:backgroundTint="@color/theme"
        android:textColor="@color/white"
        app:cornerRadius="5dp"
        />

    <Button
        android:id="@+id/btn_landing_signin_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Sign In As a User"
        android:textStyle="bold"
        android:backgroundTint="@color/white"
        android:textColor="@color/theme"
        app:cornerRadius="5dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal|center_vertical">
        <TextView
            android:id="@+id/or_landing_text"
            android:layout_width="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="or">
        </TextView>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_toLeftOf="@id/or_landing_text"
            android:layout_marginTop="11dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_toRightOf="@id/or_landing_text"
            android:layout_marginTop="11dp"
            android:background="#E0E0E0" />

    </RelativeLayout>

    <Button
        android:id="@+id/btn_landing_signin_canteen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Sign In as a Canteen Owner"
        android:textStyle="bold"
        android:backgroundTint="@color/theme"
        android:textColor="@color/white"
        app:cornerRadius="5dp"
        />


</LinearLayout>