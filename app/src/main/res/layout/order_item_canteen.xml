<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    android:elevation="8dp"
    app:cardCornerRadius="8dp"
    android:layout_margin="16dp"
    app:cardBackgroundColor="@android:color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/order_item_canteen"
        android:padding="16dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Aryan Teng's Order #123"
                android:textColor="@color/theme"
                android:fontFamily="@font/bold"
                />

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="Status: Preparing" />

        </LinearLayout>

<!--        <RelativeLayout-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginTop="16dp">-->

<!--            <ImageView-->
<!--                android:id="@+id/non_veg_image_order"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:src="@drawable/non_veg_symbol"-->
<!--                android:layout_alignParentStart="true"-->
<!--                android:layout_centerVertical="true"/>-->

<!--            <TextView-->
<!--                android:id="@+id/tv_items"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_toEndOf="@+id/non_veg_image_order"-->
<!--                android:layout_centerVertical="true"-->
<!--                android:layout_marginLeft="8dp"-->
<!--                android:text="Chicken Tikka, Qty:1"-->
<!--                android:textColor="@color/black"-->
<!--                android:fontFamily="@font/medium"/>-->

<!--        </RelativeLayout>-->

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_canteen_orders_items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_createdAt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ordered On: 22/03/2023 at 10:00 PM" />

            <TextView
                android:id="@+id/tv_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="$300" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_mark_complete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mark as Complete"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/semi_bold"
            android:textAllCaps="false"
            />

    </LinearLayout>

</androidx.cardview.widget.CardView>