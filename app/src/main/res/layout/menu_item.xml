<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="10dp">

    <ImageView
        android:id="@+id/menu_item_image"
        android:background="@drawable/edit_text_boundary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/chicken_tikka_img"
        android:layout_marginStart="10dp"/>

    <ImageView
        android:id="@+id/veg_nonveg_symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/menu_item_image"
        android:src="@drawable/non_veg_symbol"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@+id/menu_item_image"
        android:layout_below="@+id/veg_nonveg_symbol"
        android:text="ITEM"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/menu_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/menu_item_image"
        android:layout_below="@+id/name"
        android:layout_marginLeft="10dp"
        android:text="Rs 10"
        android:textSize="10sp"/>

    <TextView
        android:id="@+id/menu_item_qty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/menu_item_image"
        android:layout_below="@+id/menu_item_price"
        android:layout_marginLeft="10dp"
        android:text="5 pcs"
        android:textSize="10sp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:text="+Add"
        android:shadowColor="@android:color/holo_blue_bright"
        android:backgroundTint="@color/white"
        android:paddingHorizontal="30dp"/>

</RelativeLayout>

