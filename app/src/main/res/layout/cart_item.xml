<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="10dp">

    <ImageView
        android:id="@+id/iv_nonveg_symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/non_veg_symbol"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/tv_chicken_tikka"
        android:layout_width="wrap_content"
        android:layout_toEndOf="@+id/iv_nonveg_symbol"
        android:text="Chicken Tikka"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginStart="10dp"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_toEndOf="@+id/iv_nonveg_symbol"
        android:text="$10, Qty : 1"
        android:layout_below="@+id/tv_chicken_tikka"
        android:textColor="@color/grey"
        android:textSize="14sp"
        android:layout_marginStart="10dp"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/bt_removeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="135dp"
        android:layout_toEndOf="@id/tv_chicken_tikka"
        android:shadowColor="@android:color/holo_blue_bright"
        android:backgroundTint="@color/white"
        android:text="Remove"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        app:cornerRadius="10sp"
        tools:ignore="HardcodedText" />

    <View
        android:id="@+id/view_border"
        android:layout_width="match_parent"
        android:layout_below="@+id/bt_removeButton"
        android:layout_height="1dp"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="13dp"
        android:layout_marginTop="5dp"
        android:background="@color/light_grey"/>

</RelativeLayout>






