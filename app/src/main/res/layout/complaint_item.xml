<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="8dp"
    app:cardCornerRadius="8dp"
    android:layout_margin="16dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Complainent: Aryan Teng"
                android:fontFamily="@font/bold"
                android:textColor="@color/theme"
                />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tv_createdAt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:00 PM, 05/03/2023"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Complaint:"
            android:textColor="@color/black"
            android:fontFamily="@font/bold"/>

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed volutpat eros et urna tempor, nec blandit justo lobortis. Nullam vel arcu sem. Duis quis magna vel augue dapibus egestas. Aenean in nunc ligula."
            android:textSize="14sp"/>

        <Button
            android:id="@+id/btn_resolve"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Mark As Resolved"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:fontFamily="@font/semi_bold"
            android:textAllCaps="false"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>
