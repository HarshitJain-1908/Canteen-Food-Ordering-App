<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="10dp">

    <ImageView
        android:id="@+id/menu_item_image"
        android:background="@drawable/edit_text_boundary"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@drawable/chicken_tikka_img"
        />

    <ImageView
        android:id="@+id/veg_nonveg_symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/menu_item_image"
        android:src="@drawable/non_veg_symbol"
        android:layout_marginStart="10dp"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_toEndOf="@+id/menu_item_image"
        android:layout_below="@+id/veg_nonveg_symbol"
        android:text="ITEM"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/semi_bold"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/menu_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/menu_item_image"
        android:layout_below="@+id/name"
        android:layout_marginStart="10dp"
        android:text="Rs 10"
        android:fontFamily="@font/semi_bold"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/menu_item_qty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/menu_item_image"
        android:layout_below="@+id/menu_item_price"
        android:layout_marginLeft="10dp"
        android:text="5 pcs"
        android:fontFamily="@font/semi_bold"
        android:textSize="12sp"/>

    <Button
        android:id="@+id/btn_add_to_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="+Add"
        android:shadowColor="@android:color/holo_blue_bright"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/semi_bold"
        android:textAllCaps="false"
        android:paddingHorizontal="30dp"/>

</RelativeLayout>

